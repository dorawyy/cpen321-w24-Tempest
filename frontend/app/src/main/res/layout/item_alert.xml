<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alertCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Warning Icon -->
        <ImageView
            android:id="@+id/warningIcon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:src="@drawable/warning_icon"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Alert Title -->
        <TextView
            android:id="@+id/alertTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/warningIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Record Heat Wave" />

        <!-- Alert Description -->
        <TextView
            android:id="@+id/alertDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/warningIcon"
            app:layout_constraintTop_toBottomOf="@+id/alertTitle"
            tools:text="Multiple countries facing unprecedented temperatures" />

        <!-- Location Badge -->
        <TextView
            android:id="@+id/locationBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_location_badge"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/alertDescription"
            app:layout_constraintTop_toBottomOf="@+id/alertDescription"
            tools:text="Global" />

        <!-- Severity Badge -->
        <TextView
            android:id="@+id/severityBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_high_severity"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:textColor="@color/danger_high"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/locationBadge"
            app:layout_constraintStart_toEndOf="@+id/locationBadge"
            app:layout_constraintTop_toTopOf="@+id/locationBadge"
            tools:text="High Severity" />

        <!-- Time Ago -->
        <TextView
            android:id="@+id/timeAgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/severityBadge"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2 hours ago" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>